<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:id="@+id/lvLinear"

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:textDirection="ltr"
        android:text="أسم الجهة"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:textDirection="rtl"
            android:background="@drawable/baseline_wifi_calling_3_24"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_contactNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="رقم الجهة"
            android:textSize="16sp"
            android:textDirection="rtl" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:textDirection="rtl"
            android:background="@drawable/ic_baseline_email_24"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_contactEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="البريد الالكتروني"
            android:textSize="16sp"
            android:textDirection="rtl" />

    </LinearLayout>

    <View
        android:layout_width="500dp"
        android:layout_height="7dp"
        android:background="#4CAF50"/>
</LinearLayout>
